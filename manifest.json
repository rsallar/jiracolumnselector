 {
    "name": "Column Selector for Jira Board",
    "version": "1.3",
    "description": "Hides or reveals Jira Board columns",
	"permissions": ["webNavigation","tabs"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
    },
	"content_scripts": [ {
		"matches": [ "https://*/*RapidBoard.jspa*"],
		"run_at": "document_idle",
		"css": ["jirascript.css"],
		"js": [ "jquery-3.3.1.min.js", "jirascript.js" ]
	}],
	"page_action": {
	   "default_icon": {                    
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png",
			"64": "icons/icon64.png",
			"128": "icons/icon128.png",
			"256": "icons/icon256.png"
       }
    },
    "manifest_version": 2
  }